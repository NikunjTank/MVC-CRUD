@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

<div class="row">
    <div class="form-group">
        <div class="col-sm-3">
            <label class="pull-right">Action Name:</label>
        </div>
        <div class="col-sm-9">
            @Model.ActionName
        </div>
    </div>
</div>
<div class="row">
    <div class="form-group">
        <div class="col-sm-3">
            <label class="pull-right">Controller Name:</label>
        </div>
        <div class="col-sm-9">
            @Model.ControllerName
        </div>
    </div>
</div>
<div class="row">
    <div class="form-group">
        <div class="col-sm-3">
            <label class="pull-right">Error:</label>
        </div>
        <div class="col-sm-9">
            @Model.Exception
        </div>
    </div>
</div>